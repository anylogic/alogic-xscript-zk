<?xml version="1.0"?>
<script>
	<using xmlTag="zk-conn" module="com.alogic.xscript.zk.ZKConn" />

	<!-- 创建一个连接到本地ZooKeeper -->
	<zk-conn >
		
		<!-- 遍历指定路径的子路径输出到当前文档 -->
		<array tag="instance">
			<zk-children path="/test/global">
	               <array-item>
	               		<get id="id" value="${$value}"/>
	               		<zk-get id="data" path="/test/global/${$value}"/>
	               		<zk-getAsJson tag="data" content="${data}" extend="true"/>
	               </array-item>
			</zk-children>
		 </array>
		
		<!-- 删除指定路径 -->
		<zk-delete path = "/test" />

	</zk-conn>

</script>