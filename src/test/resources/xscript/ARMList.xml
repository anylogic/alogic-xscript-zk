<?xml version="1.0"?>
<script>
	<using xmlTag="zk-conn" module="com.alogic.xscript.zk.ZKConn" />

	<!-- 创建一个连接到本地ZooKeeper -->
	<zk-conn>
		<array tag="instance">
			<zk-children path="/alogic/global/arm/demo">
	               <array-item>
	               		<get id="id" value="${$value}"/>
	               		<zk-get id="data" path="/alogic/global/arm/demo/${$value}"/>
	               		<zk-getAsJson tag="data" content="${data}" extend="true"/>
	               </array-item>
			</zk-children>
		 </array>		
	</zk-conn>

</script>